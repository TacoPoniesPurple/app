<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
      <div class="span8">
        <h3>Microposts</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
    <div class="center hero-unit">
      <h1>Bienvenido a la Aplicacion muestra</h1>

      <h2>
        Esta es la pagina de inicio para la aplicacion muestra para el
        <a href="http://railstutorial.org">Tutorial de Ruby on Rails</a>.
      </h2>

      <%= link_to "Registrarse ahora!", signup_path, class: "btn btn-large btn-primary" %>
    </div>

    <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>