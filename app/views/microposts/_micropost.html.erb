<li>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% a = time_ago_in_words(micropost.created_at).split %>
    <% case a[1] %>
    <% when "second" then a[1] = 'segundo' %>
    <% when "seconds" then a[1] = 'segundos' %>
    <% when "minute" then a[1] = 'minuto' %>
    <% when "minutes" then a[1] = 'minutos' %>
    <% when "hour" then a[1] = 'hora' %>
    <% when "hours" then a[1] = 'horas' %>
    <% when "day" then a[1] = 'dia' %>
    <% when "days" then a[1] = 'dias' %>
    <% when "week" then a[1] = 'semana' %>
    <% when "weeks" then a[1] = 'semanas' %>
    <% when "month" then a[1] = 'mes' %>
    <% when "months" then a[1] = 'meses' %>
    <% when "year" then a[1] = 'año' %>
    <% when "year" then a[1] = 'año' %>
    <% when "years" then a[1] = 'años' %>
    <% end %>
    <!--Publicado hace <%= a.join(' ') %>.-->


  </span>
  <% if current_user?(micropost.user) %>
      <%= link_to "borrar", micropost, method: :delete,
                  data: { confirm: "Estas seguro?" },
                  title: micropost.content %>
  <% end %>
</li>

